@model EventEase.Models.Venue
@{
    ViewData["Title"] = "Edit Venue";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Venue</title>
    <script src="https://kit.fontawesome.com/2802d376d0.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/venues.css">
</head>
<body>
    <!--(W3Schools.com, n.d.-e)-->
    <div class="menu-icon" onclick="toggleSidebar()">
        <i class="fa-solid fa-bars"></i>
    </div>

    <div class="wrapper">
        <div class="sidebar">
            <h2>EVENT</h2>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">HOME</a></li>
                <li><a asp-controller="Venue" asp-action="Index">VENUES</a></li>
                <li><a asp-controller="Event" asp-action="Index">EVENT</a></li>
                <li><a asp-controller="Book" asp-action="Index">BOOK</a></li>
      
            </ul>
        </div>
        <!--(W3Schools.com, n.d.-e)-->
        <div class="main_content">
            <h2 class="text-center">Edit Venue</h2>
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="VenueId" />
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" asp-for="Name" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Location</label>
                    <input type="text" asp-for="Location" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Capacity</label>
                    <input type="number" asp-for="Capacity" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" asp-for="Description" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Image URL</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-success">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            document.querySelector(".sidebar").classList.toggle("active");
            document.querySelector(".main_content").classList.toggle("shifted");
        }
    </script>
</body>
</html>
