@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Booking - Venue Booking System</title>
    <link rel="stylesheet" href="~/css/book.css">
</head>
<body>

    <div class="menu-icon" onclick="toggleSidebar()">
        <i class="fa-solid fa-bars"></i>
    </div>

    <div class="wrapper">
        <div class="sidebar">
            <h2>EVENT</h2>
            <ul>
                <!-- fills sidebar with pages i want to link (W3Schools.com, n.d.-d) -->
                <li><a asp-controller="Home" asp-action="Index">HOME</a></li><!-- (W3Schools.com, n.d.-d)-->
                <li><a asp-controller="Venue" asp-action="Index">VENUES</a></li>
                <li><a asp-controller="Event" asp-action="Index">EVENT</a></li>
                <li><a asp-controller="Book" asp-action="Index">BOOK</a></li>
                <li><a asp-controller="Home" asp-action="Contact">CONTACT</a></li>
            </ul>
        </div>

        <div class="main_content">
            <div class="welcome-section">
                <div class="welcome-text">
                    <h2>Create a Booking</h2>
                    <p>Fill out the form below to create a new booking.</p>
                </div>
            </div>

            <div class="form-container">
                <!-- Form to create a booking (W3Schools.com, n.d.-d) -->
                <form method="post" class="booking-form">
                    <div class="form-group">
                        <label for="VenueId">Venue</label>
                        <select asp-for="VenueId" class="form-control" required>
                            <option value="">Select Venue</option>
                            <!-- Populates with venue options (W3Schools.com, n.d.-d)-->
                        </select>
                    </div>
                    <!--(W3Schools.com, n.d.-e)-->
                    <div class="form-group">
                        <label for="EventId">Event</label>
                        <select asp-for="EventId" class="form-control" required>
                            <option value="">Select Event</option>  <!-- Populate with Event options  -->  
                          
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="BookingDate">Booking Date</label>
                        <input asp-for="BookingDate" type="date" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="BookerName">Booker's Name</label>
                        <input asp-for="BookerName" type="text" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="BookerEmail">Booker's Email</label>
                        <input asp-for="BookerEmail" type="email" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create Booking</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            document.querySelector(".sidebar").classList.toggle("active");
            document.querySelector(".main_content").classList.toggle("shifted");
        }
    </script>
</body>
</html>
